<RelativeLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-100dp"
            android:contentDescription="@null"
            android:scaleType="fitStart"
            android:src="@mipmap/scrollview_header"
            android:layout_alignParentBottom="false" />

        <com.targetapps.despierta.widget.PullScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headerHeight="300dp"
            app:headerVisibleHeight="100dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/scroll_view_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:orientation="vertical"
                    android:layout_marginTop="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/white">


                        <TextView
                            android:id="@+id/nombre_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="95dp"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/user_post"
                            android:textSize="12sp"
                            android:textColor="#A1A1A1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Amigos"
                            android:id="@+id/textView4"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#ff979797" />


                    </RelativeLayout>


                    <com.facebook.login.widget.ProfilePictureView
                        android:id="@+id/imagen_perfil"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:padding="1px"
                        android:background="@android:color/white"
                        android:layout_marginLeft="21dp"
                        android:contentDescription="@null"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="290dp"
                        android:layout_marginTop="105dp"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:background="@color/white">

                        <TableLayout
                            android:id="@+id/table_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/white">

                            <ImageView
                                android:layout_width="280dp"
                                android:layout_height="1px"
                                android:contentDescription="@null"
                                android:background="#DFDFDF"
                                android:id="@+id/separador" />

                            <ListView
                                android:layout_width="wrap_content"
                                android:layout_height="300dp"
                                android:id="@+id/listView1"
                                android:layout_marginTop="5dp" />


                        </TableLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </com.targetapps.despierta.widget.PullScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buscador"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_marginTop="200dp"
        android:background="@color/white"
        android:text="Medium Text"
        android:visibility="gone">

        <EditText
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:id="@+id/buscarAmigos"
            android:hint="Buscar amigos"
            android:textColorHint="#ff000000"
            android:textColor="#ff000000"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="75dp"
            android:editable="false"
            android:clickable="false" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="BuscarAmigos"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha"
            android:layout_alignBottom="@+id/buscarAmigos"
            android:layout_toRightOf="@+id/buscarAmigos"
            android:background="@color/colorPrimary"
            android:paddingLeft="13dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Contactos"
            android:id="@+id/btContactos"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClickSelectContact" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text=""
            android:id="@+id/textView3"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColorHint="#ff000000"
            android:gravity="center_vertical"
            android:layout_below="@+id/button4"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="110dp"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/plus"
            app:fabSize="mini"
            app:rippleColor="@color/white"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="85dp"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user2"
            app:fabSize="mini"
            app:rippleColor="@color/white"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="85dp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/solicitudes"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_marginTop="200dp"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Solicitudes"
            android:id="@+id/textView5"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="5dp" />

        <ListView
            android:id="@+id/Lsolicitudes"
            android:layout_below="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#64B5F6"
            android:minHeight="50dp"
            android:minWidth="50dp">
        </ListView>

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <com.targetapps.despierta.view.BottomActionBar
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:layout_gravity="bottom" />


   </LinearLayout>

</RelativeLayout>
