<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/bus_azul"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NomMicro"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_below="@+id/textView8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N12"
        android:id="@+id/btMicro1"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:background="@color/colorPrimaryDark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N12"
        android:id="@+id/btMicro2"
        android:layout_below="@+id/textView8"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/btMicro1"
        android:layout_toRightOf="@+id/btMicro1"
        android:layout_toEndOf="@+id/btMicro1"
        android:layout_marginLeft="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N12"
        android:id="@+id/btMicro3"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/textView8"
        android:layout_alignTop="@+id/btMicro2"
        android:layout_toRightOf="@+id/btMicro2"
        android:layout_toEndOf="@+id/btMicro2"
        android:layout_alignBottom="@+id/btMicro2"
        android:layout_marginLeft="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N12"
        android:layout_below="@+id/textView8"
        android:id="@+id/btMicro4"
        android:background="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/btMicro3"
        android:layout_toRightOf="@+id/btMicro3"
        android:layout_toEndOf="@+id/btMicro3"
        android:layout_alignBottom="@+id/btMicro3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>